{
  "name": "who-is-this-pokemon",
  "version": "1.0.0",
  "description": "A page to collect pokemons. The more you can recognize them the more you can get them",
  "main": "index.js",
  "scripts": {
    "live-server": "live-server --watch=build,index.html --port=3001 --entry-file=./index.html",
    "compile-sass": "node-sass app/scss/index.scss build/index.css -w",
    "clear": "rm -rf build & mkdir build",
    "start": "npm run compile-sass & webpack-dev-server --mode development & npm run live-server",
    "build": "node-sass app/scss/index.scss build/index.css --output-style=compressed & webpack --mode production"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/foliveiraaj0/who-is-this-pokemon.git"
  },
  "author": "Fernando Oliveira",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/foliveiraaj0/who-is-this-pokemon/issues"
  },
  "homepage": "https://github.com/foliveiraaj0/who-is-this-pokemon#readme",
  "devDependencies": {
    "babel-core": "^6.26.3",
    "babel-loader": "^7.1.4",
    "babel-preset-env": "^1.7.0",
    "webpack": "^4.12.0",
    "webpack-cli": "^3.0.3",
    "webpack-dev-server": "^3.1.4",
    "node-sass": "^4.11.0"
  }
}
